{% extends 'base.html.twig' %}

{% block body %}
    <h1>TP1 - Index</h1>

    <form action="{{ path('tp1_bonjour') }}" method="post">
        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" required>

        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required>

        <button type="submit">Envoyer</button>
    </form>
    <button onclick="demanderAge()">Quel est mon âge ?</button>

<p id="id_Age"></p>

<script>
function demanderAge() {
    const annee = prompt("Entrez votre année de naissance :");
    const anneeActuelle = new Date().getFullYear();

    if (!annee || isNaN(annee)) {
        alert("Veuillez entrer une année valide.");
        return;
    }

    const age = anneeActuelle - parseInt(annee);

    if (age < 0 || age > 120) {
        alert("L'année saisie est invalide.");
        return;
    }

    document.getElementById("id_Age").textContent = `Vous avez ${age} ans.`;
}
</script>

<p id="survol">Survole ce texte pour voir le style changer !</p>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const paragraphe = document.getElementById("survol");

    paragraphe.addEventListener("mouseover", function () {
        paragraphe.style.fontSize = "30px";
        paragraphe.style.fontStyle = "italic";
        paragraphe.style.color = "red";
    });

    paragraphe.addEventListener("mouseout", function () {
        paragraphe.style.fontSize = "";
        paragraphe.style.fontStyle = "";
        paragraphe.style.color = "";
    });
});
</script>
{% endblock %}